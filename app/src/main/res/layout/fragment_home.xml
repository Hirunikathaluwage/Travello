<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/hm1"
            android:layout_width="290dp"
            android:layout_height="70dp"
            android:layout_marginTop="72dp"
            android:background="@color/purple"
            android:text="@string/search_for_a_bus"
            android:textAlignment="center"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view3" />

        <TextView
            android:id="@+id/hm2"
            android:layout_width="290dp"
            android:layout_height="69dp"
            android:layout_marginTop="44dp"
            android:background="#AF8E61F7"
            android:contextClickable="false"
            android:text="Map "
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hm1" />

        <TextView
            android:id="@+id/hm3"
            android:layout_width="290dp"
            android:layout_height="69dp"
            android:layout_marginTop="54dp"
            android:background="#AF8E61F7"
            android:contextClickable="false"
            android:text="@string/highway_bus"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hm2" />

        <View
            android:id="@+id/view3"
            android:layout_width="415dp"
            android:layout_height="125dp"
            android:background="#8E61F7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="56dp"
            android:src="@drawable/travell"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.261"
            app:layout_constraintStart_toStartOf="@+id/view3"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="140dp"
            android:layout_height="119dp"
            android:layout_marginEnd="-50dp"
            android:layout_marginBottom="28dp"
            android:src="@drawable/circle"
            app:layout_constraintBottom_toBottomOf="@+id/view3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="157dp"
            android:layout_height="90dp"
            android:layout_marginStart="-70dp"
            android:layout_marginBottom="104dp"
            android:src="@drawable/circle2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.012"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageView31"
            android:layout_width="89dp"
            android:layout_height="91dp"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="56dp"
            android:src="@drawable/circle"
            app:layout_constraintBottom_toBottomOf="@+id/view3"
            app:layout_constraintEnd_toStartOf="@+id/imageView2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>